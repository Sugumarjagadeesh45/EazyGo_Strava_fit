# ============================================
# iFit Club Backend - Environment Configuration
# Copy this file to .env and fill in your values
# ============================================

# Server Configuration
NODE_ENV=development
PORT=5001

# Database (MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# ============================================
# Strava API Configuration
# Get these from: https://www.strava.com/settings/api
# ============================================
STRAVA_CLIENT_ID=your_client_id
STRAVA_CLIENT_SECRET=your_client_secret
STRAVA_ACCESS_TOKEN=your_access_token
STRAVA_REFRESH_TOKEN=your_refresh_token
STRAVA_API_URL=https://www.strava.com/api/v3

# ============================================
# Ngrok Configuration (for local development)
# Run: ngrok http 5001
# Then copy the https URL here
# ============================================
NGROK_URL=https://xxxx-xx-xx-xx-xx.ngrok-free.app

# Strava OAuth Callback
STRAVA_REDIRECT_URI=https://xxxx-xx-xx-xx-xx.ngrok-free.app/api/auth/strava/callback

# ============================================
# Mobile App Deep Link
# ============================================
FRONTEND_URL=ifitclub://auth-success

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRE=7d

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=200

# ============================================
# CORS Configuration
# ============================================
SOCKET_CORS_ORIGIN=*
